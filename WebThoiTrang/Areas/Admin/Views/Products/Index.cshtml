@model PagedList.PagedList<WebThoiTrang.Models.EF.Product>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/products/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            @*<div class="row">
                <div class="col-9">
                    @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { }))
                    {

                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext")
                            <input type="text" name="searchtext" class="form-control">
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                            </span>
                        </div>

                    }

                </div>
            </div>*@
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Thể loại</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                        <th style="width:150px"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {

                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fa fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img src="@item.Image" width="50" /></td>
                                <td>@item.Tilte</td>
                                <td>@item.ProductCategory.Tilte</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a href'#' data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/admin/products/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <button type="button" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">
                                        <i class="fa fa-trash"></i> Xóa
                                    </button>

                                </td>
                            </tr>
                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản tin nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>

        </div>
    </div>
    <!-- /.card-body -->
    <!-- /.card-footer-->
    <!-- /.card -->

</section>
<!-- /.content -->

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.body.addEventListener('click', async function (event) {
            if (event.target.classList.contains('btnDelete')) {
                var id = event.target.dataset.id;
                var conf = confirm('Bạn có muốn xóa bản ghi này không?');

                if (conf) {
                    try {
                        var response = await fetch('/admin/products/delete', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded'
                            },
                            body: 'id=' + encodeURIComponent(id)
                        });

                        var rs = await response.json();
                        console.log('Server Response:', rs);

                        if (rs.success) {
                            var elementToRemove = document.getElementById('trow_' + id);
                            if (elementToRemove) {
                                elementToRemove.remove();
                            }
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }
                }
            }
        });
    });


</script>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkboxes = $(this).closest('.card').find('tr td input:checkbox');
                checkboxes.each(function () {
                    if (this.checked) {
                        $(this).prop('checked', true);
                        var _id = $(this).val();
                        if (str.length === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                    } else {
                        $(this).prop('checked', false);
                    }
                });

                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa các bản ghi này không?");
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/products/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkboxes = $(this).closest('.card-body').find('tr td input:checkbox');
                checkboxes.each(function () {
                    this.checked = checkStatus;
                });
            });
            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var id = $(this).data("id");
                var button = $(this); // Lưu giữ giá trị của $(this) trong biến button
                $.ajax({
                    url: '/admin/products/IsActive',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                button.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                button.html("<i class='fa fa-times text-danger'></i>");
                            }
                        }
                    }
                });
            });
        });
    </script>
}



